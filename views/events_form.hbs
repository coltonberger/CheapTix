    <script defer src="https://use.fontawesome.com/releases/v5.0.10/js/all.js"></script>
    <script type="text/javascript" src="../javascripts/createevent.js" defer></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
  </head>
  <body>
    <nav class="navbar is-dark">
        <div class="navbar-brand">
          <div class="navbar-start">
              <h3 class="navbar-item">
                  CheapTix
              </h3>
          </div>
            <div class="navbar-burger burger" data-target="navbarExampleTransparentExample">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>

        <div id="navbarExampleTransparentExample" class="navbar-menu">
            <div class="navbar-start">
                <a class="navbar-item" href="/">
                    Home
                </a>
                <a class="navbar-item" href="/index_business">
                    Business Home
                </a>
            </div>
        </div>
    </nav>


    <div class="bootstrap-iso">
      <div class="container-fluid">
        <div class="jumbotron">
          <h1>Welcome to CheapTix!</h1>
          <p>
            <br>It will ony take few steps to make your tickets available</br>
          </p>
        </div>
      </div>
    </div>

    <form id="create_event_form" class="form-horizontal">
      <!-- <fieldset> -->

        <!-- Integer input (mocking user ID TO insert event)-->
        <div class="form-group">
          <label class="col-md-4 control-label" for="event_name">USER ID</label>
          <div class="col-md-6">
            <input id="user_id_createevent" name="user_id_createevent" type="text" class="form-control" placeholder="your user ID number">
          </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
          <label class="col-md-4 control-label" for="event_name">Name of the event</label>
          <div class="col-md-6">
            <input id="event_name" name="event_name" type="text" class="form-control" placeholder="e.g Summer Solstice Party!">
          </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
          <label class="col-md-4 control-label" for="event_type">Type of event</label>
          <div class="col-md-6">
            <input id="event_type" name="event_type" type="text" class="form-control" placeholder="e.g Party, Movies, Street Market">
          </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
          <label class="col-md-4 control-label" for="available_tickets">Tickets available</label>
          <div class="col-md-6">
            <input id="available_tickets" name="available_tickets" type="text" class="form-control" placeholder="number of tickets available">
          </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
          <label class="col-md-4 control-label" for="description">Event description</label>
          <div class="col-md-6">
            <textarea id="description" name="description" class="form-control" rows="5" type="text" class="form-control" placeholder="place description here"></textarea>
          </div>
        </div>

        <!-- img input MAKE IT LATER-->
        <!-- <div class="form-group">
          <label class="col-md-4 control-label" for="description">EVENT.IMAGE</label>
          <div class="col-md-6">
            <textarea class="form-control" rows="5" type="text" class="form-control" id="description" placeholder="place description here"></textarea>
          </div>
        </div> -->

        <!-- Text input-->
        <div class="form-group">
          <label class="col-md-4 control-label" for="State">State</label>
          <div class="col-md-6">
            <input id="state" name="State" type="text" placeholder="state" class="form-control input-md" required="">
          </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
          <label class="col-md-4 control-label" for="city">City/Town</label>
          <div class="col-md-6">
            <input id="city" name="city" type="text" placeholder="city or town" class="form-control input-md" required="">
          </div>
        </div>


        <!-- Text input-->
        <div class="form-group">
          <label class="col-md-4 control-label" for="address1">Address Line1</label>
          <div class="col-md-6">
            <input id="address1" name="address1" type="text" placeholder="" class="form-control input-md">
            <span class="help-block">Street address, P.O. box, company name, c/o</span>
          </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
          <label class="col-md-4 control-label" for="Address2">Address Line2</label>
          <div class="col-md-6">
            <input id="address2" name="address2" type="text" placeholder="" class="form-control input-md">
            <span class="help-block">Apartment, suite , unit, building, floor, etc.</span>
          </div>
        </div>

        <!-- Text input-->
        <div class="form-group">
          <label class="col-md-4 control-label" for="zip">Zip/Postal code</label>
          <div class="col-md-4">
            <input id="zip" name="zip" type="number" placeholder="zip or postal code" class="form-control input-md" required="">

          </div>
        </div>

        <!-- Agreement btn -->
        <div class="form-group">
          <label class="col-md-4 control-label" for="address1"></label>
          <div class="col-md-8">
            <div class="form-check">
              <input class="form-check-input" name="invalidCheck" type="checkbox" value="" id="invalidCheck" required>
              <label class="form-check-label" for="invalidCheck">
                  I Agree to terms and conditions
                </label>
            </div>
          </div>
        </div>

        <!-- submission and cancel Btns -->
        <div class="form-group">
          <label class="col-md-4 control-label" for="address1"></label>
          <div class="col-md-8">
            <button class="btn btn-primary " name="submit" type="submit">Submit</button>
            <button type="cancel" name="cancel" class="btn btn-primary">Cancel</button>
          </div>
        </div>
        </div>

      <!-- </fieldset> -->
    </form>
  </body>

</html>


