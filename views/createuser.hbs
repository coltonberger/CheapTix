<!DOCTYPE html>
<html>

  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>CLIENT</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.1/css/bulma.min.css">
    <script defer src="https://use.fontawesome.com/releases/v5.0.7/js/all.js"></script>
    <script type="text/javascript" src="../javascripts/createuser.js" defer></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

  </head>

  <body>
    <nav class="navbar is-dark">
        <div class="navbar-brand">
          <div class="navbar-start">
              <h3 class="navbar-item">
                  CheapTix
              </h3>
          </div>
            <div class="navbar-burger burger" data-target="navbarExampleTransparentExample">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>

        <div id="navbarExampleTransparentExample" class="navbar-menu">
            <div class="navbar-start">
                <a class="navbar-item" href="/">
                    Home
                </a>
                <a class="navbar-item" href="/login">
                    Login
                </a>
            </div>
        </div>
    </nav>
    <section class="section columns">
      <div class="container has-text-centered column is-6">
      <h2 class="title">Create User Account</h2>
        <form id='create_user_form' onsubmit="createUser(event)">
          <div class="field">
            <p class="control has-icons-left has-icons-right">
              <input id='create_username' class="input" type="text" placeholder="Username" required>
            </p>
          </div>
          <div class="field">
            <p class="control has-icons-left has-icons-right">
              <input id='create_email_field' class="input" type="email" placeholder="Email" pattern="^([a-zA-Z0-9_\-\.]+)@([a-zA-Z0-9_\-\.]+)\.([a-zA-Z]{2,5})$" required>
              <span class="icon is-small is-left">
                <i class="fas fa-envelope"></i>
              </span>
              <span class="icon is-small is-right">
                <i class="fas fa-check"></i>
              </span>
            </p>
          </div>

          <div class="field">
            <p class="control has-icons-left">
              <input id='create_password_field' class="input" type="password" placeholder="Password"  minlength="8" required>
              <span class="icon is-small is-left">
              <i class="fas fa-lock"></i>
              </span>
            </p>
          </div>

          <!-- <div class="field is-grouped is-grouped-centered">
            <div class="control">
              <label class="radio">
                <input type="radio" name="answer" id="user_checkbox">
                CheapTix User
              </label>
              <label class="radio">
                <input type="radio" name="answer" id="business_checkbox">
                CheapTix Business
              </label>
            </div>
          </div> -->

          <div class="field is-grouped is-grouped-centered">
            <p class="control">
              <input id="create_submit-form" type='submit' class="button is-link" value="Create" />
            </p>
            <p class="control">
              <input id="create_reset-form" type="reset" class="button is-light" value="Cancel" />
            </p>
          </div>
          <div class="field is-grouped is-grouped-centered">
            <div class="control">
              <p>* Want to do <b>business</b> with us? Call (777) 777-7777</p>
            </div>
          </div>
        </form>
      </div>
    </section>
  </body>

</html>
